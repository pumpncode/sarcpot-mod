SMODS.Joker {
    key = "beauty_of_the_sea",
    config = {
        extra = {
            discard_mod = 1,
            mult_mod = 5,
            mult = 0
        }
    },
    loc_vars = function(self, info_queue, card)
        return {
            vars = {card.ability.extra.discard_mod, card.ability.extra.mult_mod, card.ability.extra.mult}
        }
    end,
    rarity = 1,
    pos = {
        x = 1,
        y = 7
    },
    atlas = 'sarcpot_atlas',
    cost = 6,
    unlocked = true,
    discovered = false,
    blueprint_compat = true,
    eternal_compat = true,
    soul_pos = nil,

    in_pool = function(self, args)
        return true
    end,
    calculate = function(self, card, context)
        if context.setting_blind and not context.blueprint then
            G.E_MANAGER:add_event(Event({
                trigger = 'after',
                blocking = true,
                delay = 0.2,
                func = function()
                    SMODS.scale_card(card, {
                        ref_table = card.ability.extra,
                        ref_value = "mult",
                        scalar_value = "mult_mod"

                    })

                    ease_discard(-card.ability.extra.discard_mod, true, false)

                    return true
                end
            }))
        end
        if context.joker_main then
            return {

                mult = card.ability.extra.mult

            }
        end
    end
}

