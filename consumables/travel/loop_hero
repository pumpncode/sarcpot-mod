SMODS.Consumable({
    key = 'loop_hero',
    set = 'travel',
    atlas = 'consumables',
    pos = {
        x = 2,
        y = 1
    },
    discovered = false,
    config = {
        targets = 3,
        max_highlighted = 3
    },
    loc_vars = function(self, info_queue)
        return {
            vars = {self.config.max_highlighted, self.config.targets}
        }
    end,
    cost = 3,
    calculate = function(self, card, context)
    end,
    can_use = function(self, card)
        return #G.hand.cards > 0 and #G.hand.highlighted <= self.config.max_highlighted
    end,
    use = function(self, card, area, copier)
        local excluded = {}
        for i = 1, #G.hand.cards do
            if G.hand.cards[i].highlighted then
                table.insert(excluded, i)
            end
        end
        local random_indexes = SARC.get_rand_hand_index(math.min(self.config.targets, #G.hand.cards), excluded)
        G.E_MANAGER:add_event(Event({
            trigger = 'after',
            delay = 0.2,
            blocking = true,
            func = function()
                return true
            end
        }))

        G.hand.config.highlighted_limit = G.hand.config.highlighted_limit + self.config.targets

        for _, v in ipairs(random_indexes) do
            G.E_MANAGER:add_event(Event({
                blocking = true,
                trigger = 'after',
                delay = 0.2,
                func = function()
                    G.hand:add_to_highlighted(G.hand.cards[v])
                    return true
                end
            }))
        end

        --[[G.E_MANAGER:add_event(Event({
            blockable = true,
            trigger = 'after',
            delay = 0.2,
            func = function()

                return true
            end
        }))]] --

        for _, v in ipairs(random_indexes) do
            G.E_MANAGER:add_event(Event({
                blocking = true,
                blockable = true,
                trigger = 'after',
                delay = 0.2,
                func = function()
                    play_sound('crumple1')
                    SMODS.destroy_cards(G.hand.cards[v])
                    return true
                end
            }))
        end

        G.E_MANAGER:add_event(Event({
            blockable = true,
            trigger = 'immediate',
            delay = 0,
            func = function()
                G.hand.config.highlighted_limit = G.hand.config.highlighted_limit - self.config.targets
                return true
            end
        }))

    end
})
